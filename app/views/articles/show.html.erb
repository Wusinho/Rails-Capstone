<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>User:</strong>
  <%= @article.user.username %>
</p>
<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>
<%= @article.id %>
<p>
  <%= image_tag @article.image_url if @article.image %>
</p>

  <% if user_signed_in?  %>
    <% if @article.liked?(current_user) %>
      <%= @article.vote.count %>
    <% else %>
      <%= link_to "Vote", vote_path(@article), method: :put %>
    <% end %>
  <% end %>

<% if current_user && current_user.username == @article.user.username %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', category_path(@article.category_id) %>
