
  <div class="row" >

<% @recent_related_articles.each_with_index do |j, index| %>
    <% if index < 2 %>
      <div class="col-md-6 p-0 ">
        <div class="card m-0 border-0" style="max-width: 540px;">
          <div class="row no-gutters">

            <div class="col-md-6" style="height: 39vh">
              <%= image_tag j.image_url %>
<%= image_tag 'devices/my-device.png' rescue image_tag 'devices/unknow-device.png' %>

            </div>

            <div class="col-md-6">
              <div class="card-body">
               <%= link_to j.title, article_path(j.id) %>
                <p class="card-text"><%= j.body %></p>
              </div>
            </div>

          </div>
        </div>
      </div>
      
  <% end %>
<% end %>
  </div>

  <div class="row" >

<% @recent_related_articles.each_with_index do |j, index| %>
    <% if index >= 2 %>
      <div class="col-md-6 p-0">
        <div class="card m-0 border-0" style="max-width: 540px;">
          <div class="row no-gutters">

          

            <div class="col-md-6"style="height: 39vh">
              <div class="card-body">
               <%= link_to j.title, article_path(j.id) %>

                <p class="card-text"><%= j.body %></p>
              </div>
            </div>

            <div class="col-md-6">
              <%= image_tag j.image_url %>
            </div>

          </div>
        </div>
      </div>
      
  <% end %>
<% end %>
  </div>